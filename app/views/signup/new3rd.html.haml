.user-header
  = link_to "/", class: "user-header__img" do
    = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?465897195", class: "header__img"
  %nav.progress
    %ul.progress-bar
      %li.progress-bar__text
        会員情報
        .progress-status.through
        .progress-status__bar.through
      %li.progress-bar__text
        電話番号認証
        .progress-status.through
        .progress-status__bar.through
      %li.progress-bar__text.active
        お届け先住所入力
        .progress-status.through
        .progress-status__bar
      %li.progress-bar__text
        支払い方法
        .progress-status
        .progress-status__bar
      %li.progress-bar__text
        完了
        .progress-status
.main
  .user-container
    .registration-head
      %h2.registration-head__title 住所入力
    .registration-form
      .form-wrapper
        = form_with model: @user, url: "/user", id:"new_user", class:"new_user", local: true do |form|
          .form-group
            = form.label :postal_code, "郵便番号", class: "label"
            %span.essential 必須
            = form.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "例）123-4567", class: "form-default"
          .form-group
            = form.label :prefecture, "都道府県", class: "label"
            %span.essential 必須
            = form.text_field :prefecture, autofocus: true, autocomplete: "prefecture", class: "form-default"
          .form-group
            = form.label :city, "市区町村", class: "label"
            %span.essential 必須
            = form.text_field :city, autofocus: true, autocomplete: "city", placeholder: "例）横浜市緑区", class: "form-default"
          .form-group
            = form.label :town, "番地", class: "label"
            %span.essential 必須
            = form.text_field :town, autofocus: true, autocomplete: "town", placeholder: "例）青山1-1-1", class: "form-default"
          .form-group
            = form.label :building, "建物名", class: "label"
            %span.essential__grey 任意
            = form.text_field :building, autofocus: true, autocomplete: "building", placeholder: "例）柳ビル103", class: "form-default"
          .form-group
            = form.label :city, "電話", class: "label"
            %span.essential__grey 任意 
            = form.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "例）09012345678", class: "form-default"
          %button.registration-form__content__btn
            = link_to "次へ進む", "#"
          .space
= render "devise/registrations/footer"